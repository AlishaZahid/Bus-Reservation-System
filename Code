//USER LOGIN AND CHOICES
	class User
	{
		string firstName, secondName, emailid, loginid;
		int pswrd, cnfrmPswrd, loginPswrd;
	public:
		User()
		{
			pswrd = 0;
			cnfrmPswrd = 0;
		}

		//SIGNUP FROM AND FILE HANDLING TO SAVE THE USER DATA IN .txt FILE FOR FURTHER USE
		void Signup()
		{
			//FOUT file for the login page 
			ofstream fout;
			fout.open("SIGNUP.txt", ios::out);

			cout << "\nENTER YOUR FIRST NAME : ";
			cin >> firstName;

			cout << "\nENTER YOUR SECOND NAME : ";
			cin >> secondName;

			cout << "\nENTER YOUR EMAIL ID : ";
			cin >> emailid;

			cout << "\nENTER PASSWORD IN DIGITS: ";
			cin >> pswrd;

			cout << "\nENTER CONFIRM PASSWORD IN DIGITS : ";
			cin >> cnfrmPswrd;

			//IF PASSWORD AND CONFIRM PASSWORDS WILL BE DIFFERENT 
			while (pswrd != cnfrmPswrd)
			{
				cout << "\n\t\tYOUR PASSWORD DIDN'T MATCH WITH CONFRM PASSWORD\n" << endl;
				cout << "\nENTER PASSWORD AGAIN IN DIGITS: ";
				cin >> pswrd;

				cout << "\nENTER CONFIRM PASSWORD AGAIN IN DIGITS : ";
				cin >> cnfrmPswrd;
			}

			fout << emailid << endl;
			fout << cnfrmPswrd << endl;

			fout.close();

		}

		void Login()
		{
			//FIN FILE FOR READING 
			ifstream fin;
			fin.open("SIGNUP.txt", ios::in);

			while (!fin.eof())
			fin >> emailid >> pswrd;

			cout << "\nENTER YOUR EMAIL ID : ";
			cin >> loginid;

			cout << "\nENTER YOUR PASSWORD : ";
			cin >> loginPswrd;

			if (!fin.is_open())
			{
				cout << "\n\t\tFILE NOT OPENED" << endl;
			}
			else if (loginid == emailid && loginPswrd == pswrd)
			{
				cout << "\n\n\t\t LOG IN SUCCESSFULL" << endl;
			}

			//IF LOGIN EMAIL AND ID DOESN'T MATCHED FROM THE SIGNUP EMAIL AND ID
			else
			{
				while (loginid != emailid && loginPswrd != pswrd || loginid != emailid && loginPswrd == pswrd || loginid == emailid && loginPswrd != pswrd)
				{
					cout << "\n\t\tWRONG ID OR PASSWORD" << endl;
					cout << "\nENTER YOUR EMAIL ID AGAIN : ";
					cin >> loginid;

					cout << "\nENTER YOUR PASSWORD AGAIN : ";
					cin >> loginPswrd;
				}
				cout << "\n\n\t\t LOG IN SUCCESSFULL" << endl;
			}
			fin.close();
		}

