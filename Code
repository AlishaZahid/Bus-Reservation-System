int main()
{
	int loginChoice, setChoice, reseChoice, seatNumber;
	User u;

	system("Color 0A");
	cout << "\t\tWElCOME TO BUS RESEVATION SYSTEM\n" << endl;

	cout << "\t\t1.SIGNUP\n\t\t2. LOGIN" << endl;
	cout << "\nENTER YOUR CHOCIE : ";
	cin >> loginChoice;

	while (loginChoice != 1 && loginChoice != 2)
	{
		cout << "\nENTER YOUR CHOICE AGAIN : ";
		cin >> loginChoice;
	}

	///////////////////////////////////////////////////////////////////////
	 switch (loginChoice )
	{
	 case 1:
	 {
		cout << "*****************************************************" << endl;
		cout << "\n\t\t WELCOME TO SINGUP FORM" << endl;

		u.Signup();

		cout << "\n\t\tSIGN UP SUCCESSFULL" << endl;

		cout << "\n\t\t1.SIGNUP\n\t\t2. LOGIN" << endl;
		cout << "\nENTER YOUR CHOCIE : ";
		cin >> loginChoice;
       
	
		if (loginChoice == 1)
		{
			cout << "\n\t\tYOU ALREADY REGISTERED AN ACCOUNT" << endl;
			while (loginChoice != 2)
			{
				cout << "\n\t\t1.SIGNUP\n\t\t2. LOGIN" << endl;
				cout << "\nENTER YOUR CHOCIE AGAIN : ";
				cin >> loginChoice;
			}
		}
	}
	 case 2:
	 {
		cout << "*********************************************************" << endl;
		cout << "\n\t\t WELCOME TO LOGIN FORM" << endl;

		u.Login();

		cout << "\n*******************WELCOME TO HOME PAGE**********************" << endl;
		cout << "\n\t\t1. RESERVATION\n\t\t2.EXIT" << endl;
		cout << "\nENTER YOUR CHOCIE : ";
		cin >> setChoice;

		while (!(setChoice >= 1 && setChoice <= 2))
		{
			cout << "\nENTER YOUR CHOICE AGAIN : ";
			cin >> setChoice;
		}
	}
	}

	/////////////////////////////////////////////////////
	 switch (setChoice)
	 {
	 case 1:
	 {
		 cout << "\n*******************WELCOME TO RESERVATION PAGE***********************" << endl;
	     u.Schedule();
	 }
	 case 2:
	 {
		 cout << "\n\t***PROGRAM EXIT SECCESSFULLY ***" << endl;
		 break;
	 }
	 }

	return 0;
}
