#include<iostream>
#include<fstream>
#include<string>
#include<windows.h>
using namespace std;

struct Node
{
	int data;
	Node* next;
};

	Node* head;
	Node* tail;

	//CREATING BUS SEATS USING LINKED LIST
	void create_seats()
	{
		for (int i = 0; i < 15; i++)
		{
			Node* newNode = new Node;
			newNode->data = 0;
			newNode->next = nullptr;
			if (head == nullptr)
			{
				head = newNode;
				tail = newNode;
			}
			else
			{
				tail->next = newNode;
				tail = newNode;
			}
		}
	}

	//CHECKING IF SEAT IS ALREADYBOOKED OR NOT
	bool check_seat(int seatNo)
	{
		Node* check = head;
		int temp = 1;
		while (check != nullptr)
		{
			if (temp == seatNo && check->data == 0)
			{
				//temp++;
				return true;
			}
			else if(temp == seatNo && check->data == 1)
			{
				return false;
			}
			temp++;
			check = check->next;
		}
	}

	//CHECKING HOW MANY SEATS ARE AVAILAIBLE 
	void availaible_seats()
	{
		
		int count = 0,i=1;
		Node* temp = head;
		Node* ptr = head;

		cout << "\n--------------------------------------------------------------" << endl;
		while (temp != nullptr)
		{
			cout << "\t\tSEAT NO " << i << " : " << temp->data << endl;
			temp = temp->next;
			i++;
		}
		cout << "\n--------------------------------------------------------------" << endl;
		while (ptr != nullptr )
		{
			if (ptr->data == 0)
			{
				count++;
			}
			ptr = ptr->next;
		}
		cout << "\nTOTAL AVAILABLE SEATS ARE " << count << endl;;
	}

	//BOOKING SEAT USING SEAT NUMBER 
	void book_seat(int seatno)
	{
		int temp=1;
		Node* ptr=head;

		while (ptr != nullptr)
		{
			if (temp == seatno)
			{
				ptr->data = 1;
			}
			temp++;
			ptr = ptr->next;
		}
		cout << "\nSEAT NUMBER " << seatno<< " BOOKED SUCCESSFULLY" << endl;
	}

	//DISPLAY DATA

	void display()
	{
		ifstream fin;
		fin.open("SCHEDULE.txt", ios::in);
		                                         
		if (fin.is_open())
		{
			string line;
			while (getline(fin, line))
			{
				cout << line << endl;
			}

		}
		fin.close();
	}
